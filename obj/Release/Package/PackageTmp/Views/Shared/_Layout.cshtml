<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Valley Carpet Cleaning</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="/css/bootstrap.css" rel="stylesheet" media="screen" />
        <link href="/css/bootstrap-responsive.css" rel="stylesheet" />
        <link href='http://fonts.googleapis.com/css?family=Merriweather+Sans' rel='stylesheet' type='text/css'>
        <link href="/css/vccleaning.css" rel="stylesheet" />
        <!--[if lte IE 9]>
            <meta http-equiv="X-UA-Compatible" content="IE=edge" >
            <link href="/css/ie9.css" rel="stylesheet" />
        <![endif]-->
        <!--[if lte IE 8]>
            <meta http-equiv="X-UA-Compatible" content="IE=edge" >
            <link href="/css/ie8.css" rel="stylesheet" />
        <![endif]-->
        @RenderSection("head", false)
    </head>
    <body>
        <div class="container">
            <div class="masthead">
            <div class="heading row">
                <a class="brand span5" href="/"><img src="/img/logo.png" alt="Valley Carpet Cleaning" /></a>
            </div>
            <div class="contact hidden-phone hidden-tablet">
                <div class="sphone"><strong>For a quick quote, call @System.Configuration.ConfigurationManager.AppSettings["phoneNumber"]</strong>
                    <a href="mailto:@System.Configuration.ConfigurationManager.AppSettings["contactEmail"]"><div class="email"></div></a>
                </div>
            
            </div>
            <div class="navbar">
                <div class="navbar-inner">
                    <!--<a class="brand-small visible-phone"></a>-->
                    <div class="container">
                        <a class="visible-phone visible-tablet" href="tel:@System.Configuration.ConfigurationManager.AppSettings["phoneNumber"]"><div class="phone-btn"></div></a>
                        <a class="visible-phone visible-tablet" href="mailto:@System.Configuration.ConfigurationManager.AppSettings["contactEmail"]"><div class="email-btn"></div></a>
                        <button type="button" class="btn btn-navbar visible-phone visible-tablet" data-toggle="collapse" data-target=".nav-collapse">
                            MENU
                            <div>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </div>
                        </button>
                        <div class="nav-collapse collapse">
                            <ul class="nav">
                                <li class="home"><a href="/">Home</a></li>
                                <li class="residential"><a href="residential">Residential</a></li>
                                <li class="office"><a href="office">Office</a></li>                    
                                <li class="area-rugs"><a href="arearugs">Area Rugs</a></li>
                                <li class="upholstery"><a href="upholstery">Upholstery</a></li>
                                <li class="pet-problems"><a href="petproblems">Pet Problems</a></li>
                                <li class="green-cleaning"><a href="greencleaning">Green Cleaning</a></li>
                                <li class="get-quote"><a href="getquote">Get a Qoute</a></li>
                                <li class="about-us"><a href="aboutus">About Us</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                </div>
            </div><!-- /.navbar -->
      
            <hr class="line-1" />
            @RenderBody() 
            <hr>
            <!-- row of columns -->
            <div class="bottom-menu row-fluid">
                <div class="span4">
                    <a href="contactus"><h3>Contact Us</h3><img src="/img/get-quote.png" alt="pencil"/></a>
                </div>        
                <div class="span4">
                    <a href="petproblems"><h3>Pet Problems</h3><img src="/img/dog.png" alt="dog"/></a>
                </div>
                <div class="span4">
                    <a href="greencleaning"><h3>Green Cleaning</h3><img src="/img/green-earth.png" alt="earth"/></a>
                </div>
            </div>

            <hr>
            <div class="footer">
                <p>&copy; Valley Carpet Cleaning @DateTime.Today.Year</p>
            </div>
        </div>
        
        <!-- javascript
        ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="http://code.jquery.com/jquery.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script>
            !function ($) {
                $(function () {
                    //make blurb title same width as image
                    $(".blurb-title").width($(".blurb-img img").width());
                    // carousel demo
                    $('#myCarousel').carousel();


                    $(window).on("resize", function () {
                        //make blurb title same width as image
                        $(".blurb-title").width($(".blurb-img img").width());
                    });
                })

            }(window.jQuery)
        </script>
    </body>
</html>
